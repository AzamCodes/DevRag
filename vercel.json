{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "cd frontend && npm install --legacy-peer-deps"
      }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node",
      "config": {
        "installCommand": "cd backend && npm install --legacy-peer-deps"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
